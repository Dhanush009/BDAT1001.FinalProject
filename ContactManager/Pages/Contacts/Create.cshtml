@page
@model ContactManager.Pages.Contacts.CreateModel

@{
    ViewData["Title"] = "Create";
}


<h4 id="createhtag">Contact</h4>
<button type="button" class="formbtn">
    <span class="formbtn-icon">
        <a asp-page="Index"><ion-icon name="arrow-back-circle-outline" ></ion-icon></a>
    </span>
 </button>

<hr />
<div class="row">
    <div class="col-md-4">
        <form class="form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Contact.Name" class="control-label">Name</label>
                    <input asp-for="Contact.Name" class="form-control" placeholder="Enter your Name" />
                    <span asp-validation-for="Contact.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contact.Address" class="control-label">Address</label>
                    <input asp-for="Contact.Address" class="form-control form-control-error"  placeholder="Enter your Address"/>
                    <span asp-validation-for="Contact.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contact.City" class="control-label">City</label>
                    <input asp-for="Contact.City" class="form-control form-control-error"  placeholder="Enter your City"/>
                    <span asp-validation-for="Contact.City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contact.State" class="control-label">State</label>
                    <input asp-for="Contact.State" class="form-control form-control-error"  placeholder="Enter your State/Province"/>
                    <span asp-validation-for="Contact.State" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contact.Zip" class="control-label">Zip</label>
                    <input asp-for="Contact.Zip" class="form-control form-control-error"  placeholder="Enter your ZipCode"/>
                    <span asp-validation-for="Contact.Zip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contact.Email" class="control-label">Email</label>
                    <input asp-for="Contact.Email" class="form-control form-control-error"  placeholder="Enter your Email"/>
                    <span asp-validation-for="Contact.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
